@model ToDoList.Models.DashboardViewModel

<h1>Dashboard</h1>

<div>
    <h2>Welcome, @Model.Username!</h2>
    <p>You have @Model.PendingCount pending tasks and @Model.DoneCount completed tasks.</p>
    <!-- Add a logout button here -->
    <form method="post" action="@Url.Action("Logout", "Account")">
        <button type="submit">Logout</button>
    </form>
</div>

